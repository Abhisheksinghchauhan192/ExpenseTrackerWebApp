<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Personal Expense Tracker</title>
    <link rel="stylesheet" href="/css/modelstyle.css" />
    <link rel="stylesheet" href="/css/homeStyle.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins&family=Roboto+Flex:opsz,wght@8..144,100..1000&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="body">
    <!-- model for messages showing -->
    <div id="successModal" class="modal">
      <div class="modal-content">
        <span class="close" onclick="hideModal()">Ã—</span>
        <div class="icon">
          <i class="fas fa-check-circle success-icon"></i>
        </div>
        <h3>Success</h3>
        <!-- This will be dynamically updated -->
        <p>Message goes here</p>
        <!-- This will be dynamically updated -->
        <button class="btn-ok" onclick="hideModal()">OK</button>
      </div>
    </div>

    <%-include("includes/navbar.ejs") %>

    <main class="dashboard">
      <div class="history">
        <div class="options">
          <form action="/home/gettable" method="post">
            <div class="filter">
              <a  href="/home/add" id="add-btn">ADD</a>
              <label for="filter" class="option-lable">Apply Filter</label>
              <select name="filter" id="filter">
                <option value="No Filter">No Filter</option>
                <option value="Filter">Filter</option>
              </select>

              <button class="btn">Get Data</button>
            </div>
            <div class="afterfilter">
              <div class="selections">
                <label for="top" class="option-lable">Top:</label>
                <select name="top" id="top">
                  <option value="5">5</option>
                  <option value="10">10</option>
                  <option value="15">15</option>
                  <option value="20">20</option>
                  <option value="25">25</option>
                  <option value="30">30</option>
                  <option value="40">40</option>
                  <option value="50">50</option>
                  <option value="60">60</option>
                  <option value="All">All</option>
                </select>
              </div>

              <div class="selections">
                <label for="By" class="option-lable"> By:</label>
                <select name="orderby" id="orderby">
                  <option value="Date">Date</option>
                  <option value="Amount">Amount</option>
                  <option value="Category">Category</option>
                </select>
              </div>

              <div class="selections">
                <label for="ASC" class="option-lable">Order</label>
                <select name="ASC" id="ascdesc">
                  <option value="asc">Acending</option>
                  <option value="desc">Decending</option>
                </select>
              </div>
            </div>
          </form>
        </div>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>S.No</th>
                <th>Date</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Merchant</th>
                <th>PaymentMethod</th>
                <th>Description</th>
              </tr>
            </thead>
            <tbody>
              <% for (let i = 0;i<20;i++) { %>
              <tr>
                <td><%=i%></td>
                <td><%=i%></td>
                <td><%=i%></td>
                <td><%=i%></td>
                <td><%=i%></td>
                <td><%=i%></td>
                <td><%=i%></td>
              </tr>

              <% } %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="charts">
        <div id="total-exp">
          <h2>Total:<%=total%></h2>
        </div>

        <h3>Category Wise Chart :</h3>
        <div class="pie-chart">
          <canvas id="cat-chart"></canvas>
        </div>

        <div class="monthly">
          <h3>Monthly Spend :</h3>
          <form action="/getmonthly" method="post" class="selectmonth">
            <label for="mmonth" class="option-lable">Month:</label>
            <div class="qlabel">
              <select name="mmonth" id="monthq ">
                <option value="Jan">January</option>
                <option value="Feb">February</option>
                <option value="Mar">March</option>
                <option value="Apr">April</option>
                <option value="May">May</option>
                <option value="Jun">June</option>
                <option value="Jul">July</option>
                <option value="Au">Auguast</option>
                <option value="Sep">September</option>
                <option value="Oct">October</option>
                <option value="Nov">November</option>
                <option value="Dec">December</option>
              </select>
            </div>

            <label for="myear" class="option-lable">Year:</label>
            <div class="qlabel">
              <select name="myear" id="mYear">
                <option value="2023">2023</option>
                <option value="2024">2024</option>
                <option value="2025">2025</option>
                <option value="2026">2026</option>
              </select>
            </div>
            <button type="submit" class="btn">Get</button>
          </form>

          <div class="bar-chart">
            <canvas class="bar-chart"></canvas>
          </div>
        </div>
      </div>
    </main>
    <section class="insights">
      <p>Your Insights here</p>
    </section>

    <%-include("includes/footer.ejs") %>
    <script src="/scripts/model.js"></script>
    <script>
      window.chartData = {
        total: <%- total %>,
        byCategory: <%- JSON.stringify(byCategory) %>
      };
    </script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/scripts/chartLoader.js"></script>
  </body>
</html>
